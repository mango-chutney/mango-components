{
  "name": "mango-components",
  "version": "1.0.3",
  "main": "./lib/index.js",
  "repository": "https://github.com/mango-chutney/mango-components",
  "author": "Mango Chutney",
  "license": "UNLICENCED",
  "private": true,
  "scripts": {
    "build": "npm-run-all --sequential clean transpile",
    "check": "flow check",
    "clean": "rm -rf lib build",
